# Basics
TARGET_ENV="{{ env }}"
DJANGO_APPLICATION_TITLE="{{ django_app_title }}"
HOSTNAME_URL="{{ host_url }}"
INVITE_REQUEST_ADMIN="{{ django_admin_email }}"
REQUIRE_INVITE_TO_REGISTER="{{ django_require_invite_to_register }}"
SIGNUP_TIMEOUT_DAYS="{{ django_signup_timeout_days }}"
DATABASES_CUSTOM="{{ db_platform_type }}://{{ db_user_name }}:{{ db_user_pw }}@{{ db_host_address }}:{{ db_host_port }}/{{ db_name }}{{ db_host_options }}"

# Debug, security
DJANGO_SECRET_KEY="{{ django_secret_key }}"
DEBUG="{{ django_debug }}"

# Installed apps
ENV_SPECIFIC_APPS="{{ django_environment_apps }}"
OPTIONAL_INSTALLED_APPS="{{ django_optional_installed_apps }}"

# Static file configs
DJANGO_ASSETS_ROOT="{{ install_root }}/{{ project_name }}"
AWS_S3_CUSTOM_DOMAIN="s3.amazonaws.com/{{ s3_storage_bucket_name }}"
# TODO(rnagle): do we need these for static files?
AWS_ACCESS_KEY_ID="{{ aws_access_id }}"
AWS_SECRET_ACCESS_KEY="{{ aws_secret_key }}"
AWS_STORAGE_BUCKET_NAME="{{ s3_storage_bucket_name }}"

# FHIR/Backend Server config
DJANGO_FHIR_SERVER_DEFAULT="{{ django_fhirserver_id }}"
DJANGO_FHIR_CERTSTORE_REL="{{ django_fhir_certstore_relative }}"
THS_FHIR_SERVER="{{ ths_fhir_server }}"
THS_FHIR_PATH="{{ ths_fhir_path }}"
THS_FHIR_RELEASE="{{ ths_fhir_rel }}"
THS_FHIR_REWRITE_FROM='["{{ ths_fhir_server }}{{ ths_fhir_path }}{{ ths_fhir_rel }}",]'
THS_FHIR_REWRITE_TO="{{ ths_fhir_rewrite_to }}"
THS_SEARCH_EXPIRY="{{ ths_search_expiry }}"
DJANGO_USER_ID_SALT="{{ django_user_id_salt }}"
DJANGO_USER_ID_ITERATIONS="{{ django_user_id_iterations }}"

# Email configuration
DJANGO_FROM_EMAIL="{{ django_from_email }}"
DJANGO_ADMIN_EMAIL="{{ django_admin_email }}"
DJANGO_EMAIL_BACKEND="{{ django_email_backend }}"
DJANGO_EMAIL_HOST="email-smtp.us-east-1.amazonaws.com"
DJANGO_ADMIN_PREPEND_URL="{{ django_admin_redirector }}"

# MyMedicare Auth Integration
DJANGO_MEDICARE_LOGIN_URI="{{ medicare_login_uri }}"
DJANGO_MEDICARE_REDIRECT_URI="{{ medicare_redirect_uri }}"
DJANGO_SLS_TOKEN_ENDPOINT="{{ sls_token_endpoint }}"
DJANGO_SLS_USERINFO_ENDPOINT= "{{ sls_userinfo_endpoint }}"
DJANGO_SLS_VERIFY_SSL="{{ sls_verify_ssl }}"
DJANGO_SLS_CLIENT_ID="{{ sls_client_id }}"
DJANGO_SLS_CLIENT_SECRET="{{ sls_client_secret }}"

# Misc. settings
DJANGO_BLOCK_HTTP_REDIRECT_URIS="{{ django_block_http_redirect }}"
DJANGO_OAUTH2_PROVIDER="{{ django_oauth2_provider }}"
DJANGO_LOGGING="{{ django_logging }}"
DJANGO_NO_UI="{{ django_no_ui }}"
CORS_ORIGIN_ALLOW_ALL="{{ django_cors_origin_allow_all }}"

# Tealim config
{% if env in ["prod", "impl"] %}TEALIUM_ENV="prod"{% endif %}

# Application model settings
DJANGO_APP_LOGO_SIZE_MAX="{{ django_app_logo_size_max }}"
DJANGO_APP_LOGO_WIDTH_MAX="{{ django_app_logo_width_max }}"
DJANGO_APP_LOGO_HEIGHT_MAX="{{ django_app_logo_height_max }}"

# Application label slugs to exclude from externally
# published lists, like those used for internal use testing.
DJANGO_APP_LIST_EXCLUDE="{{ django_app_list_exclude }}"
