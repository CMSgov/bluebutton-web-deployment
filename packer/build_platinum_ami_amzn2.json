{
  "variables": {
    "source_ami": "",
    "subnet_id": "subnet-a0d9c28a"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ssh_username": "ec2-user",
    "instance_type": "m6i.large",
    "region": "us-east-1",
    "subnet_id": "{{user `subnet_id`}}",
    "associate_public_ip_address": "false",
    "source_ami": "{{user `source_ami`}}",
    "ami_name": "bb2-amzn2-platinum-{{isotime \"20060102030405\"}}",
    "ssh_pty": false,
    "temporary_key_pair_type": "ed25519",
    "ssh_timeout": "10m",
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/xvda",
        "volume_type": "gp2",
        "volume_size": 40,
        "encrypted": true,
        "delete_on_termination": true
      }
    ],
    "tags": {
      "Name": "bb2-amzn2023-platinum-{{isotime \"20060102030405\"}}"
    }
  }],
    "provisioners": [
      {
          "type": "ansible",
          "playbook_file": "playbook/build_platinum_ami_amzn2/main.yml",
          "extra_arguments": [ "-e", "ansible_ssh_private_key_file={{user `ec2-user`}}", "ANSIBLE_DEBUG=True" ],
          "use_proxy": false,
          "user": "ec2-user"
        }
    ]
}
