{
  "variables": {
    "source_ami": "",
    "subnet_id": "subnet-a0d9c28a"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ssh_username": "ec2-user",
    "instance_type": "m4.large",
    "region": "us-east-1",
    "subnet_id": "{{user `subnet_id`}}",
    "associate_public_ip_address": "false",
    "source_ami": "{{user `source_ami`}}",
    "ami_name": "bb2-amzn2-platinum-{{isotime \"20060102030405\"}}",
    "ssh_timeout": "15m",
    "iam_instance_profile": "cms-cloud-base-ec2-profile-v4",
    "ssh_pty": true,
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/xvda",
        "volume_type": "gp2",
        "volume_size": 32,
        "encrypted": true,
        "delete_on_termination": false
      }
    ],
    "tags": {
      "Name": "bb2-amzn2-platinum-{{isotime \"20060102030405\"}}"
    }
  }],
    "provisioners": [
      {
      "type": "shell",
      "inline": [
        "sudo yum install -y grub2",
        "echo 'GRUB_ENABLE_BLSCFG=true' | sudo tee -a /etc/default/grub",
        "sudo grub2-mkconfig -o /boot/grub2/grub.cfg",
        "sudo reboot"
      ]
    },
      {
          "type": "ansible",
          "playbook_file": "playbook/build_platinum_ami_amzn2/main.yml",
          "extra_arguments": [ "-e", "ansible_ssh_private_key_file={{user `ec2-user`}}" ],
          "use_proxy": false,
          "user": "ec2-user"
        }
    ]
}
