{
  "variables": {
    "source_ami": "",
    "subnet_id": "subnet-a0d9c28a"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ssh_username": "ec2-user",
    "ssh_private_key": "{{user `ec2-user`}}",
    "instance_type": "m4.large",
    "region": "us-east-1",
    "subnet_id": "{{user `subnet_id`}}",
    "associate_public_ip_address": "false",
    "source_ami": "{{user `source_ami`}}",
    "ami_name": "bb2-amzn2-platinum-{{isotime \"20060102030405\"}}",
    "ssh_pty": true,
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/xvda",
        "volume_type": "gp2",
        "volume_size": 30,
        "encrypted": true,
        "delete_on_termination": true
      }
    ],
    "tags": {
      "Name": "bb2-amzn2-platinum-{{isotime \"20060102030405\"}}"
    }
  }],
    "provisioners": [
        {
            "type": "shell-local",
            "inline": "ansible-playbook /playbook/build_platinum_ami_amzn2/main.yml",
            "ansible_env_vars": [ "ANSIBLE_SSH_ARGS=-o HostKeyAlgorithms=+ssh-rsa -o PubkeyAcceptedKeyTypes=ssh-rsa -o IdentitiesOnly=yes", "ANSIBLE_HOST_KEY_CHECKING=False" ],
            "extra_arguments": [ "--private-key={{user `ec2-user`}}", "-vv" ],
            "user": "ec2-user"
        }
    ]
}
