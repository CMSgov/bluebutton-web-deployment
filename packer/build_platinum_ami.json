{
  "variables": {
    "release_version": "none",
    "source_ami": "",
    "vault_password_file": "",
    "git_branch": "master",
    "subnet_id": "",
    "env": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "ssh_username": "ec2-user",
    "instance_type": "m4.large",
    "region": "us-east-1",
    "subnet_id": "{{user `subnet_id`}}",
    "associate_public_ip_address": "false",
    "source_ami": "{{user `source_ami`}}",
    "ami_name": "bb20-platinum-{{isotime \"20060102030405\"}}",
    "ssh_pty": true,
    "tags": {
        "Name": "bb20-platinum-{{isotime \"20060102030405\"}}",
    }
  }],
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "playbook/build_platinum_ami/main.yml",
            "ansible_env_vars": [
              "ANSIBLE_VAULT_PASSWORD_FILE={{user `vault_password_file`}}"
            ],
            "extra_arguments": [
              "-e git_branch={{user `git_branch`}}",
              "-e env={{user `env`}}"
            ]
        }
    ]
}
