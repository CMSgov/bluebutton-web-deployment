{
  "variables": {
    "source_ami": "",
    "subnet_id": "subnet-a0d9c28a",
    "release_version": "master",
    "git_branch": "master",
    "deployment_branch": "master"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ssh_username": "ec2-user",
    "instance_type": "m7i.large",
    "region": "us-east-1",
    "subnet_id": "{{user `subnet_id`}}",
    "associate_public_ip_address": "false",
    "source_ami": "{{user `source_ami`}}",
    "ami_name": "bb2-amzn2023-{{user `git_branch`}}-{{isotime \"20060102030405\"}}",
    "ssh_pty": false,
    "tags": {
        "Name": "bb2-amzn2023-{{user `git_branch`}}-{{isotime \"20060102030405\"}}",
        "Application": "BlueButton",
        "Function": "AppServer",
        "Layer":  "APP",
        "Release": "{{user `release_version`}}"
    }
  }],
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "playbook/build_app_ami_amzn2/main.yml",
            "extra_arguments": [ "-e", "ansible_ssh_private_key_file={{user `ec2-user`}}", "-e git_branch={{user `git_branch`}} -e deployment_branch={{user `deployment_branch`}}" ],
            "use_proxy": false,
            "user": "ec2-user"
        }
    ]
}
